
<%= simple_form_for(@good) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :source %>
    <%= f.input :destination %>
    <%= f.input :consignment %>
    <%= f.input :entry_at %>
    <%= f.input :exit_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
